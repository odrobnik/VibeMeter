{
  "name": "vibe-meter-electron",
  "version": "1.2.0",
  "description": "Vibe Meter - Electron Edition",
  "main": "dist_ts/main.js",
  "scripts": {
    "build:ts": "tsc",
    "start": "npm run build:ts && electron dist_ts/main.js",
    "test": "npm run build:ts && jest",
    "test:e2e": "npm run build:ts && NODE_ENV=test playwright test",
    "rebuild": "npx @electron/rebuild -f -w keytar",
    "dist": "npm run build:ts && electron-builder",
    "build:mac": "npm run build:ts && electron-builder --mac",
    "build:mac:arm64": "npm run build:ts && electron-builder --mac --arm64",
    "build:win": "npm run build:ts && electron-builder --win",
    "build:linux": "npm run build:ts && electron-builder --linux",
    "build:all": "npm run build:ts && electron-builder -mwl",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,html,css}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,css}\""
  },
  "keywords": [
    "Electron",
    "Cursor",
    "AI",
    "spending",
    "monitor"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0"
  },
  "build": {
    "appId": "com.vibemeter.electron",
    "productName": "Vibe Meter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist_ts/",
      "renderer/",
      "package.json",
      "assets/"
    ],
    "mac": {
      "icon": "assets/appicon.png",
      "target": "dmg",
      "notarize": false
    },
    "win": {
      "icon": "assets/appicon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/appicon.png",
      "target": "AppImage"
    }
  }
}
